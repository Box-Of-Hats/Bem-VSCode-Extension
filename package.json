{
    "name": "bemhelper",
    "displayName": "BEM Helper",
    "description": "Improve writing html using BEM naming conventions.",
    "version": "0.5.2",
    "author": "Box-Of-Hats",
    "publisher": "Box-Of-Hats",
    "engines": {
        "vscode": "^1.32.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/bem.png",
    "activationEvents": [
        "onLanguage:html",
        "onLanguage:aspnetcorerazor",
        "onLanguage:javascriptreact",
        "onLanguage:php",
        "onLanguage:razor",
        "workspaceContains:*.jsx",
        "workspaceContains:*.html"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": [
            {
                "title": "BEM linting options",
                "properties": {
                    "bemHelper.showDepthWarnings": {
                        "type": "boolean",
                        "default": true,
                        "description": "Highlight classes that contain more than a block and element. e.g block__block2__element",
                        "scope": "window"
                    },
                    "bemHelper.classNameCase": {
                        "type": "string",
                        "enum": [
                            "any",
                            "kebab",
                            "snake",
                            "camel",
                            "pascal"
                        ],
                        "enumDescriptions": [
                            "Allow Any-Cased style of class names.",
                            "Allow kebab-cased style of class names.",
                            "Allow snake_cased style of class names.",
                            "Allow camelCased style of class names.",
                            "Allow PascalCased style of class names."
                        ],
                        "default": "kebab",
                        "description": "The allowed case styling of class names.",
                        "scope": "window"
                    },
                    "bemHelper.responsiveLinting": {
                        "type": "boolean",
                        "default": true,
                        "description": "Enable/disable linting checks whenever a file contents changes. Disable for increased performace. Reload window to take effect",
                        "scope": "window"
                    },
                    "bemHelper.tagList": {
                        "type": "array",
                        "default": [
                            "div",
                            "div",
                            "base",
                            "blockquote",
                            "button",
                            "canvas",
                            "code",
                            "form",
                            "header",
                            "h1",
                            "h2",
                            "h3",
                            "h4",
                            "h5",
                            "h6",
                            "hr",
                            "img",
                            "input",
                            "label",
                            "li",
                            "nav",
                            "ol",
                            "option",
                            "p",
                            "select",
                            "span",
                            "table",
                            "tbody",
                            "td",
                            "textarea",
                            "tfoot",
                            "th",
                            "thead",
                            "tr",
                            "ul"
                        ],
                        "description": "The list of HTML tags to use for BEM element snippet suggestions.",
                        "scope": "window"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "extension.insertBemElement",
                "title": "BEM: Insert Element"
            },
            {
                "command": "extension.insertBemModifier",
                "title": "BEM: Insert Modifier"
            },
            {
                "command": "extension.generateStyleSheet",
                "title": "BEM: Generate Stylesheet"
            }
        ],
        "keybindings": [
            {
                "command": "extension.insertBemElement",
                "key": "alt+b e",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.insertBemModifier",
                "key": "alt+b m",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.generateStyleSheet",
                "key": "alt+b s",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Box-Of-Hats/Bem-VSCode-Extension"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
