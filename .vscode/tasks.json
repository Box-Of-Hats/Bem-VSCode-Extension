// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "deploy to VSCode marketplace",
            "type": "shell",
            "command": "vsce package; vsce publish",
            "isBackground": false,
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "npm: compile",
            "type": "shell",
            "command": "npm run compile",
            "isBackground": false,
            "presentation": {
                "echo": false,
                "revealProblems": "never",
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": "test",
            "problemMatcher": []
        }
    ]
}
